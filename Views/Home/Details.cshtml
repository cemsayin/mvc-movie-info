@model MovieCategoryModel

<div class="row">
    <div class="col-md-3">
        @* @Html.Partial("_menu", @Model.Categories) *@
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutter">
                    <div class="col-md-3">
                        <img src="~/img/@Model.Movie.ImageUrl" alt="@Model.Movie.Description" class="card-img">
                    </div>
                    <div class="col-md-9">
                        <h5 class="card-title">
                            @Model.Movie.Name
                        </h5>
                        <p class="card-text">
                            @Html.Raw(Model.Movie.Description)
                        </p>
                        <p class="card-text">
                            <small class="text-muted">3 days ago</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>